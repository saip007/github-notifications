{
  "manifest_version": 3,
  "name": "GitHub Notifications",
  "version": "1.0.2",
  "description": "Provides one-click access to GitHub notifications in a browser popup.",
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": [
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://api.github.com/notifications",
    "https://service.saiprashanth0528.workers.dev/"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    }
  },
  "oauth2": {
    "client_id": "Ov23liiB4QYeeqkkv09r",
    "scopes": [
      "notifications"
    ]
  }
}
